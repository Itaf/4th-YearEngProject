<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name: "
                android:layout_marginTop="52dp"
                android:layout_row="0"
                android:layout_column="0">
            </TextView>
            <EditText android:id="@+id/editText1"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Enter a name"
                android:layout_marginTop="52dp"
                android:layout_row="0"
                android:layout_column="1">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Birth Date: "
                android:layout_row="1"
                android:layout_column="0">
            </TextView>
            <EditText android:id="@+id/editText2"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="dd/mm/yyyy"
                android:layout_row="1"
                android:layout_column="1">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Gender: "
                android:layout_row="2"
                android:layout_column="0">
            </TextView>
            <EditText android:id="@+id/editText4"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="M/F"
                android:layout_row="2"
                android:layout_column="1">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Occupation: "
                android:layout_row="3"
                android:layout_column="0">
            </TextView>
            <EditText android:id="@+id/editText5"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_row="3"
                android:layout_column="1">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Current Address: "
                android:layout_row="4"
                android:layout_column="0">
            </TextView>
            <EditText android:id="@+id/editText6"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_row="4"
                android:layout_column="1">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medical Conditions: "
                android:layout_row="5"
                android:layout_column="0">
            </TextView>
            <EditText android:id="@+id/editText7"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_row="5"
                android:layout_column="1">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Emergency Contact: "
                android:layout_row="6"
                android:layout_column="0">
            </TextView>
            <EditText android:id="@+id/editText8"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="text"

                android:layout_row="6"
                android:layout_column="1">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medical History: "
                android:layout_row="7"
                android:layout_column="0">
            </TextView>
            <EditText android:id="@+id/editText9"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_row="7"
                android:layout_column="1">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Other Information: "
                android:layout_row="8"
                android:layout_column="0">
            </TextView>
            <EditText android:id="@+id/editText10"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:hint="..."
                android:layout_row="8"
                android:layout_column="1">
            </EditText>

            <Button
                android:id="@+id/btn_signup"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:text="Sign Up"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_row="9"
                android:layout_column="0">
            </Button>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Cancel"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_row="9"
                android:layout_column="1">
            </Button>

        </GridLayout>

    </ScrollView>

</LinearLayout>

